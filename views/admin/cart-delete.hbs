{{#extends 'base'}}

{{#block "content"}}

<a href="#" onclick="goBack()" class="mt-3 mb-3 btn btn-dark btn-sm"> Go Back </a>

<h4>Are you sure you want to delete this cart?</h4>
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>

<table class="table">
    <thead>
        <tr style="text-align:center">
            <th>Cart ID</th>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Version</th>
            <th>Price</th>                       
            <th>Date Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each carts}}
            <tr style="text-align:center">
                <td>{{this.cart_id}}</td>
                <td>{{this.productVersion_id}}</td>
                <td>{{this.productName}}</td>
                 <td>{{this.versionName}}</td>
                <td>{{this.price}}</td>
                <td>{{this.date_time}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>
<div class="alert alert-secondary">
    <a href="/admin/carts" class="ml-2 me-4 btn btn-secondary btn-sm"> Cancel Delete </a>
    <input type="submit" class="ml-2 me-4 btn btn-danger btn-sm" value="Confirm Delete"/>
</div>
</form>
{{/block}}
{{#block 'js'}}
    <script>
        function goBack(){
            window.history.back();
        }
    </script>
{{/block}}
{{/extends}}