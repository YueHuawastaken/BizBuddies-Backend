{{#extends 'base'}}

{{#block "content"}}

<a href="#" onclick="goBack()" class="mt-3 mb-3 btn btn-dark btn-sm"> Go Back </a>

<h4>Are you sure you want to delete {{products.productName}}?</h4>
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>

<table class="table">
    <thead>
        <tr style="text-align:center">
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Version</th>
            <th>Price</th>                      
            <th>Date Time</th>
        </tr>
    </thead>
    <tbody>
        <tr style="text-align:center">
            <td>{{products.id}}</td>
            <td>{{products.name}}</td>
            <td>{{products.productVersion.versionName}}</td>
            <td>{{products.productVersion.price}}</td>
            <td>
                {{#if productVersion.image_url}}
                    <img src="{{productVersion.image_url}}" class="img-fluid" alt="image">
                {{/if}}
            </td>
        </tr>
    </tbody>
</table>
<div class="alert alert-secondary">
    <a href="/admin/products" class="ml-2 me-4 btn btn-secondary btn-sm"> Cancel Delete </a>
    <input type="submit" class="ml-2 me-4 btn btn-dark btn-sm" value="Confirm Delete"/>
</div>
</form>
{{/block}}
{{#block 'js'}}
    <script>
        function goBack(){
            window.history.back();
        }
    </script>
{{/block}}
{{/extends}}