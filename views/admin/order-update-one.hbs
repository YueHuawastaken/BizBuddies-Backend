{{#extends 'base'}}

{{#block "content"}}

<a href="/admin/orders/{{orders.order_id}}/update-order" class="mt-3 mb-3 btn btn-dark btn-sm"> Go Back </a>

<h4> Order Item Updated: {{orders.order_id}}</h4>

    <table class="table">
        <thead>
            <tr style="text-align:center">
                <th>Order ID</th>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Product Version</th>
                <th>Price</th>
                <th>Studio/Shop Name</th>                    
                <th>Date Time</th>
            </tr>
        </thead>
        <tbody>
            <tr style="text-align:center">
            <td style="padding-top:12px;">{{orders.order_id}}</td>
            <td style="padding-top:12px;">{{orders.products.product_id}}</td>
            <td style="padding-top:12px;">{{orders.products.productName}}</td>
            <td style="padding-top:12px;">{{orders.productVersion.versionName}}</td>
            <td style="padding-top:12px;">{{orders.productVersion.price}}</td>
            <td style="padding-top:12px;">{{orders.suppliers.studioShopName}}</td>
            <td style="padding-top:12px;">{{orders.date_time}}</td>
            </tr>
        </tbody>
    </table>

    <div class="alert alert-secondary">
        <a href="/admin/orders/{{orders.order_id}}/update-order" class="ml-2 me-4 btn btn-secondary btn-sm"> Go Back </a>
    </div>
{{/block}}

{{#block 'js'}}
    <script>
        function goBack(){
            window.history.back();
        }
    </script>
{{/block}}
{{/extends}}