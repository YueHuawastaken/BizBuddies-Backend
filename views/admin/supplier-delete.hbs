{{#extends 'base'}}

{{#block "content"}}

<a href="#" onclick="goBack()" class="mt-3 mb-3 btn btn-dark btn-sm"> Go Back </a>

<h4>Are you sure you want to delete the supplier: {{suppliers.studioShopName}}?</h4>
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>

<table class="table">
    <thead>
        <tr style="text-align:center">
              <th>ID</th>
              <th>Studio/Shop Name</th>
              <th>Wx Id</th>
              <th>Zhi Fu Verification</th>
              <th>Phone Number</th>
    </tr>
    </thead>
    <tbody>
        <tr style="text-align:center">
            <td>{{this.id}}</td>
            <td>{{this.studioShopName}}</td>
            <td>{{this.wxId}}</td>
            <td>{{this.zhiFuVerification}}</td>
            <td>{{this.phoneNumber}}</td>
    </tr>
    </tbody>
</table>
<div class="alert alert-secondary">
    <a href="/admin/suppliers" class="ml-2 me-4 btn btn-secondary btn-sm"> Cancel Delete </a>
    <input type="submit" class="ml-2 me-4 btn btn-danger btn-sm" value="Confirm Delete"/>
</div>
</form>
{{/block}}
{{#block 'js'}}
    <script>
        function goBack(){
            window.history.back();
        }
    </script>
{{/block}}
{{/extends}}